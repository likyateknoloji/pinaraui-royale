	<fx:Script>
		<![CDATA[
			import com.likya.pinara.model.AppInfo;
			import com.likya.pinara.model.ModelLocator;
			
			import mx.controls.Alert;
			
			import spark.components.NavigatorContent;
			import spark.components.TextInput;
			import spark.events.IndexChangeEvent;
			import spark.events.TextOperationEvent;
			
			[Bindable] 
			public var appInfo:AppInfo = ModelLocator.getInstance().appInfo;
			
			// Bu değişkeni aşağıdaki work dir enable edilince kaldır !
			public var jsJobWorkDir:TextInput = new TextInput();
			
			private static var invalidFileNameChars:RegExp = /[\/\\:*?"<>|%@]/;
			
			public function validateForm():Boolean
			{
				/*if(jsOsType.selectedIndex == -1) {
					Alert.show("Os Type is not selected !");
					return false;
				}*/
				if(jsJobActivity.selectedIndex == -1) {
					Alert.show(resourceManager.getString("messages", "jobBaseActivityNotSelected"));
					return false;
				}
				if(jsJobPriority.selectedIndex == -1) {
					Alert.show(resourceManager.getString("messages", "jobBasePriorityNotSelected"));
					return false;
				}
				if(jsJobLogFile.text != "" && invalidFileNameChars.test(jsJobLogFile.text)) {
					Alert.show(resourceManager.getString("messages", "jobBaseLogFilename"), "Tab Id : " + NavigatorContent(parent.parent.parent).label);
					return false;
				}
				checkLogPath();
				
				return true;
			}
			
			protected function checkLogPath():void
			{
				var logPath:String = jsJobLogPath.text;
				
				if(appInfo.ostype == AppInfo.OS_UNIX && logPath.indexOf("/", logPath.length-1) == -1) {
					logPath = logPath + "/";
				} else if(appInfo.ostype == AppInfo.OS_WINDOWS && logPath.indexOf("\\", logPath.length-1) == -1) {
					logPath = logPath + "\\";
				} else {
					logPath = logPath;
				}
				
				jsJobLogPath.text = logPath;
			}
			
			protected function ekle_clickHandler(event:MouseEvent):void
			{
				envVarList.dataProvider.addItem(envVars.text);
				
			}
			
			protected function cikar_clickHandler(event:MouseEvent):void
			{
				if(envVarList.dataProvider.length != 0 && envVarList.selectedIndex != -1) {
					cikar.enabled = true;
					envVarList.dataProvider.removeItemAt(envVarList.selectedIndex);
				} else {
					cikar.enabled = false;
				}
				
			}
			
			protected function envVars_changeHandler(event:TextOperationEvent):void
			{
				if(event.currentTarget.text.length > 0) {
					ekle.enabled = true;
				} else {
					ekle.enabled = false;
				}
				
			}
			
			protected function envVarList_changeHandler(event:IndexChangeEvent):void
			{
				if(envVarList.selectedIndex != -1) {
					cikar.enabled = true;
				} else {
					cikar.enabled = false;
				}
			}
			
		]]>
	</fx:Script>
	
