				/*				if(bhour.text == "" || bminute.text == "" || bsecond.text == "") {
				Alert.show("Begin time is not defined !");
				return false;
				}	*/
				
				
				/*				if(edate.text == "") {
				Alert.show("End date is not defined !");
				return false;
				}	
				
				if(ehour.text == "" || eminute.text == "" || esecond.text == "") {
				Alert.show("End time is not defined !");
