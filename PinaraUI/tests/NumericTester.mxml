<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600">
	<fx:Script>
		<![CDATA[
			import spark.layouts.HorizontalLayout;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	<mx:HBox horizontalAlign="center">
		<s:FormItem label="Başlangıç Offset" layout="{new HorizontalLayout()}" width="100%" >
			<s:NumericStepper id="beginOff" stepSize="1" width="100" minimum="0" maximum="100000"/>
		</s:FormItem>
		<s:FormItem label="Bitiş Offset" layout="{new HorizontalLayout()}" width="100%" >
			<s:NumericStepper id="endOff" stepSize="1" width="100" value="0"/>
		</s:FormItem>
		<s:FormItem width="100%" >
			<s:Button label="Refresh" />
		</s:FormItem>
	</mx:HBox>
	
</s:Application>
